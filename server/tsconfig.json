{
    "$schema": "https://json.schemastore.org/tsconfig",
    "buildOptions": {
        "verbose": true
    },
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": ["DOM", "ESNext"],
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "target": "ES5"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
